<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
    <!-- bootstrap 3.3.7 added to div, input, and textarea classes -->
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" >
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30" ></textarea>  
    </div>
    <!-- when submit is clicked a post request is sent to the server app -->
    <!-- with two pieces of data (the input and the text area )          -->
    <button class="btn btn-primary" type="submit">Publish</button> 
</form>

<%- include("partials/footer"); -%>